<h1>All Articles</h1>
<% if can? :create, Post %>
<%= link_to "New Article", new_post_path, class: 'btn btn-primary btn-mini' %>
<% end %>
<% @posts.each do |post| %>
<div class="media">
	<div class="media-body">
		<h4 class="media-heading">
			<p><%= link_to post.title, post %></p>
		</h4>
		
	</div>
</div>
<% end %>
